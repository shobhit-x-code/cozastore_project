                    <div class="work-category py-3 px-3 ">
                        <div class="d-flex flex-column align-items-center">
                            <h4 class="mt-2">Manage Categories</h4>
                        </div>
                        <div class="mt-3 ps-2">
                            <form action="/admin/loadBanners" method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-md-12 mb-4 d-flex  justify-content-around">
                                        <div class="form-outline">
                                            <input style="width: 30vw;" type="text" name="banner" id="form3Example1"
                                                class="form-control" placeholder="Banner name" />
                                        </div>

                                        <% if(typeof message !=='undefined' ){%>

                                            <p class="mt-1 ps-2 text-danger">
                                                <%= message %>
                                            </p>

                                            <%}%>
                                                <div class="form-outline ">
                                                    <input style="width: 30vw;" type="file" name="bannerImage"
                                                        id="form3Example1" class="form-control" multiple />
                                                </div>

                                                <input style="width:7vw; " type="submit"
                                                    class="btn btn-primary   form-control " value="Upload">
                                    </div>
                                </div>

                            </form>
                        </div>
                        <br>
                        <!-- categorey table -->
                        <div class="content">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-md-11">
                                        <div class="card">
                                            <div class="content table-responsive ">
                                                <table class="table v-middle table-striped">
                                                    <thead>
                                                        <tr>
                                                            <th><span>Sl NO</span></th>
                                                            <th><span>Image</span></th>
                                                            <th><span>Name</span></th>
                                                            <th>status</th>
                                                            <th><span>Actions</span></th>

                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% if(banners.length> 0){
                                                            for(let i=0; i<banners.length;i++ ){%>
                                                                <tr>
                                                                    <td>
                                                                        <span>
                                                                            <%=i+1 %>
                                                                        </span>
                                                                    </td>
                                                                    <td style="image-resolution: 5px;">
                                                                        <img src="/banners/<%=banners[i].bannerImage[0] %> "
                                                                            alt="" width="100vw" height="50vh">
                                                                        <img src="/banners/<%=banners[i].bannerImage[1] %>"
                                                                            alt="" width="100vw" height="50vh">
                                                                        <img src="/banners/<%=banners[i].bannerImage[2] %>"
                                                                            alt="" width="100vw" height="50vh">
                                                                    </td>
                                                                    <td>
                                                                        <%=banners[i].banner %>
                                                                    </td>
                                                                    <td>
                                                                        <% if(banners[i].is_active==1) { %>
                                                                            <img style="width: 1.6vw"
                                                                    src="/admin/assets/img/greenmark.png" />
                                                                    <% } else { %>
                                                                        
                                                                        <% } %>
                                                                        </td>
                                                                    <td>
                                                                        

                                                                        <a href="/admin/currentBanner?id=<%= banners[i]._id %>" 
                                                                            class="btn btn-primary"> choose </a>
     
                                                                    </td>


                                                                    <!-- modal end -->
                                                                </tr>
                                                                <%}}%>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
