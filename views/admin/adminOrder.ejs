                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                
                            </div>
                            
                            <div class="content table-responsive table-full-width">
                                <table id="orderlist" class="table table-striped">
                                    <thead>
                                        <th>SI NO</th>
                                        <th>images & prices</th>
                                    	<th>Order Id</th>
                                    	<th>User Name</th>
                                    	<th>Date</th>
                                    	<th>Payment Status</th>
                                        <th>Bill Amount</th>
                                        <th>status</th>
                                        <th>Action</th>
                                    </thead>
                                    <tbody>
                                        <% if(order.length>0){ %>
                                            <% for(let i=1;i <order.length; i++){ %>  
                                        <tr>
                                        	<th><%= i %> </th>
                                            <td>
                                                <% order[i-1].products.item.forEach(x=>{ %>
                                                               <img style="width:2.5rem ;height: 3rem;" src="/assets/uploads/<%=x.productId.image %>" alt=""> 
                                                               <br>
                                                               â‚¹<%=x.productId.price %>
                                                               <br>
                                              <%  })%> 
                                            
                                            </td>
                                            
                                            <td>
                                                <%= order[i-1]._id %>
                                            </td> 
                                            <td>
                                                <%= order[i-1].userId.name %>
                                            </td>
                                            <td>
                                                <%= order[i-1].createdAt.toDateString() %>
                                            </td>
                                            <td>
                                                <%= order[i-1].payment %>
                                            </td>   
                                            <td>
                                                <%= order[i-1].products.totalPrice %>
                                            </td>
                                            <td>
                                                <%= order[i-1].status %>
                                            </td>  
                                            <td>
                                                <form action="" method="post">
                                                    <select name="status" >
                                                        <option ><%= order[i-1].status %> </option>
                                                        <option >In Progress</option>
                                                        <option >Packed</option>
                                                        <option >Shipped</option>
                                                        <option >Delivered</option>
                                                        <option >Canceled</option>
                                                    </select>
                                                    <input type="hidden" name="orderid" value="<%= order[i-1]._id %>">
                                                    <button type="submit" class="border border-primary rounded">Update</button>
                                                </form>
                                            </td>   
                                            
                                        </tr>
                                        <% } } else{ %>
                                            <tr>
                                                <td colspan="5">Orders Not Found</td>
                                            </tr>
                                            <% } %>
                                        
                                    </tbody>
                                </table>

